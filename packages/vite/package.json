{
  "name": "@synxjs/vite",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins.d.ts",
      "import": "./dist/plugins.mjs",
      "require": "./dist/plugins.js"
    },
    "./vike": {
      "types": "./src/vike/renderer/types.ts",
      "import": "./src/vike/renderer/_default.page.server.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "vitest run",
    "test:watch": "vitest --silent=false --watch --coverage",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@synxjs/core": "workspace:*",
    "@synxjs/server": "workspace:*",
    "@synxjs/types": "workspace:*",
    "vike": "^0.4.206"
  }
}
