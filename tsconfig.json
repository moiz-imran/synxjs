{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6"
    ],
    "jsx": "react",
    "jsxFactory": "createElement",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "core/*": [
        "src/core/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}